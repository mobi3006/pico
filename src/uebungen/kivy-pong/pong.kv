#:kivy 1.11.0

<PongBall>:
    size: 50, 50 
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size          

<PongPaddle>:
    size: 25, 200
    canvas:
        Rectangle:
            pos:self.pos
            size:self.size

<PongGame>:
    ball: pong_ball         # model binding 830128362103612 (PongGame.ball) and widget binding (id=pong_ball)
    player1: player_left    # model binding 830128362103612 (PongGame.player1) and widget binding (id=player_left)
    player2: player_right   # model binding 830128362103612 (PongGame.player2) and widget binding (id=player_right)
    
    canvas:
        Rectangle:
            pos: self.center_x-5, 0
            size: 10, self.height       # size 10 ... -5 ... 5
    
    Label:
        font_size: 70  
        center_x: root.width / 4
        top: root.top - 50
        text: str(root.player1.score)   # model binding
        
    Label:
        font_size: 70  
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: str(root.player2.score)   # model binding
    
    PongBall:
        id: pong_ball               # widget-id ... referenced by model-widget-binding
        center: self.parent.center
        
    PongPaddle:
        id: player_left             # widget-id ... referenced by model-widget-binding
        x: root.x
        center_y: root.center_y
        
    PongPaddle:
        id: player_right            # widget-id ... referenced by model-widget-binding
        x: root.width-self.width
        center_y: root.center_y